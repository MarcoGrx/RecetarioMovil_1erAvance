<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/fondo_aplicacion">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_volver"
            android:text="@string/btnVolver"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/fondo_boton"/>

        <ImageView
            android:id="@+id/imagenReceta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/subir_imagen"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_subir_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir imagen"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/fondo_boton"
            android:layout_below="@+id/imagenReceta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/nombreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la receta"
            android:inputType="text"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/ingredientesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredientes (separados por coma)"
            android:inputType="textMultiLine"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/tiempoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiempo de preparaciÃ³n"
            android:inputType="text"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/dificultadEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dificultad"
            android:inputType="text"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/tipoDietaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de dieta"
            android:inputType="text"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/procedimientoEditText"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:hint="Procedimiento (Enumerar paso a paso)"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:gravity="bottom|start"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_guardar_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar receta"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:backgroundTint="@color/fondo_boton"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    />

                <Button
                    android:id="@+id/btn_cancelar_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:backgroundTint="@color/fondo_boton"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"/>

        </RelativeLayout>

    </LinearLayout>